<h2 class="text-3xl font-bold text-[#FFF7DD] mb-6 text-center">Friends' Reflections</h2>
<div class="text-center mb-6">
  <%= link_to "Add Friend",
      friends_path,
      class: "bg-[#1B3C53] text-[#FFF7DD] font-mono font-bold py-2 px-6 rounded-3xl hover:bg-[#234C6A] transition inline-block" %>
</div>

<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
  <% @friends_entries.each do |entry| %>
    <div class="bg-[#1B3C53] rounded-3xl p-6 shadow-md hover:shadow-lg transition transform hover:-translate-y-1 hover:bg-[#234C6A]">
      <p class="text-[#FFF7DD] font-mono text-lg mb-3">
        <%= entry.user.username %> â€” <%= entry.title %>
      </p>
      <p class="text-[#AFC1C1] text-sm">
        <%= entry.created_at.strftime("%B %d, %Y at %I:%M %p") %>
      </p>
      <p class="text-[#D2C1B6] font-mono mt-3"><%= truncate(entry.content, length: 120) %></p>
    </div>
  <% end %>
</div>