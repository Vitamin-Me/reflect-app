<% if posted_today %>
  <%= render "friends_entries" %>
<% else %>
  <%= render "daily_reflection" %>
<% end %>

<hr class="my-5 border-gray-500 opacity-40">

<h2 class="text-3xl font-bold text-[#FFF7DD] mb-6 text-center">Your Reflections</h2>

<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
  <% @entries.each do |entry| %>
    <%= link_to entry_path(entry),
      class: "block bg-[#1B3C53] rounded-3xl p-6 text-center shadow-md hover:shadow-lg transition transform hover:-translate-y-1 hover:bg-[#234C6A]" do %>

      <p class="text-[#FFF7DD] font-mono text-lg mb-3 truncate">
        <%= entry.title.is_a?(Hash) ? entry.title["reference"] || entry.title[:reference] : entry.title %>
      </p>
      <p class="text-[#AFC1C1] text-sm">
        <%= entry.created_at.strftime("%B %d, %Y at %I:%M %p") %>
      </p>

    <% end %>
  <% end %>
</div>

